@model Clinic.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Записаться к врачу</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Создание записи</h4>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="DoctorId" class="control-label">Выберите врача</label>
                            <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                            <span asp-validation-for="DoctorId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PatientId" class="control-label">Выберите пациента</label>
                            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AppointmentDate" class="control-label">Дата записи</label>
                            <input asp-for="AppointmentDate" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Создать</button>
                            <a asp-action="Index" class="btn btn-secondary">Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
