@model Clinic.Models.Appointment

@{
    ViewData["Title"] = "Редактировать";
}

<h1 class="text-center">Редактировать запись</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="DoctorId" class="control-label">Врач</label>
                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
                     
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PatientId" class="control-label">Пациент</label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">

                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AppointmentDate" class="control-label">Дата записи</label>
                    <input asp-for="AppointmentDate" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
