@model IEnumerable<Clinic.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Текущие записи</h1>

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Врач</th>
                        <th scope="col">Пациент</th>
                        <th scope="col">Дата записи</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Doctor.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Patient.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })">Изменить запись</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Отменить запись</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a class="btn btn-success" asp-action="Create">Записаться</a>
            </div>
        </div>
    </div>
</div>
