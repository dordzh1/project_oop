@model Clinic.Models.Patient

@{
    ViewData["Title"] = "Создать нового пациента";
}

<h1 class="text-center">Создание нового пациента</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">ФИО</label>
                    <input asp-for="Name" class="form-control" placeholder="Введите ФИО" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Адрес электронной почты</label>
                    <input asp-for="Email" class="form-control" placeholder="Введите адрес электронной почты" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Зарегестрироваться</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
