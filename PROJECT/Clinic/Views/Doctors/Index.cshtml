@model IEnumerable<Clinic.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<style>
    .doctor-photo img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #fff;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
    }
</style>

<h1>Доктора</h1>
<h1>Предполагается что эта страница только для админов</h1>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Specialization)
                </th>
                <th>
                    Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cabinet.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td class="doctor-photo">
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Photo))" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cabinet.Name)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
